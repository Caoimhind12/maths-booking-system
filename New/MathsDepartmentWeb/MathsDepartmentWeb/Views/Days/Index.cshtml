@model IEnumerable<MathsDepartmentWeb.Models.Day>

@{
                /**/

                ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-1"></div>

    <div class="col-md-10" ; style="background-color: white; border-radius: 35px; padding: 20px">
        <h2>Days</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Days)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Days)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DayID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.DayID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.DayID })
                    </td>
                </tr>
            }

        </table>
        <div class="col-md-1"></div>
    </div>
</div>